{% if error is defined and error %}
<div class="col-sm-12 alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
  {% if csrf_token %}
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
  {% endif %}
  <div class="form-group">
    <label for="username">{{ 'security.login.username'|trans }}</label>
    <input type="email" class="form-control" id="username" name="_username" required="required" >
  </div>
  <div class="form-group">
    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" class="form-control"  id="password" name="_password" required="required" >
  </div>
  <div class="form-group form-check">
    <label class="form-check-label">
      <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on"> Remember me
    </label>
  </div>
  <input type="submit" class="btn btn-primary btn-block"  id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
