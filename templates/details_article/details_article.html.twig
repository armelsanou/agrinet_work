{% extends 'VuesAgrinet2/layout.html.twig' %}

{% block Home_title %}::acueil {% endblock %}

{% block stylesheets %}
  
{% endblock %}

{% block body %}

<!-- banner -->
<div class="inner-banner" id="home">
	<div class="container">
	</div>
</div>
<!-- //banner -->

<style>
 span.actu {
    font-size: 1em;
    font-weight: 400;
    margin: 1em 0;
    line-height: 1.8em;
    color: #777;
    font-size: 0.875em;
    line-height: 1.8em;
    margin: 1em 0;
}
img.lib-img-show.imageActuDetails {
    top: 0px;
    width: 100%;
    height: 20%;
    margin: 0px;
}

.card.col-md-9.contenuImage {
    border: none;
}

ul.list-group.list-group-flush.tailleImgTextActu li {
    padding-top: 3px;
    height: 107px;
    background: white !important;
}

span.titreActualite{
    color: #fa4b2a;
    font-weight: 600;
}

p.titreActualite{
    color: #fa4b2a;
    font-weight: 600;
}

body{
    background-color: #f7f7f7;
}
</style>

<section class="about py-5">

    <div class="container detailsContainer">

        <div class="row">
           
            <div class="card col-md-9 jumbotron contenuImage" style="background-color: #ffffff !important;">   

                <span class="titreActualite titreActualite"><p>{{ actualite.title }}</p></span>
                <img class="img-responsive lib-img-show imageActuDetails" src="{{ asset('uploads/') }}{{ actualite.image }}">
                <span class="titreActualite"><p>{{ actualite.title }}</p></span>

                <span class="actu" style="font-family: 'Open Sans', sans-serif;">{{ actualite.content }}</span>
            </div>            

            <div class="col-xs-12 col-sm-6 col-md-3" >

                <div class="card" >


					<div class="card-header bg-dark text-white">
                         DERNIÈRES ACTUALITÉS
					</div>
					<ul class="list-group list-group-flush tailleImgTextActu">

						{% for actu in all_actualite %}
							<li class="list-group-item">
                                <a href="{{path('actualite')}}">
                                    <div class="container">
                                            <div class="row row-margin-bottom">
                                                <div class="col-md-12 no-padding lib-item" data-category="view">
                                                    <div class="lib-panel">
                                                        <div class="row box-shadow">
                                                            <div class="col-md-4 positionActuImg" >
                                                                <img class="lib-img-show imageActu" src="{{ asset('uploads/') }}{{ actu.image }}">
                                                            </div>
                                                            <div class="col-md-8 positionTexteActu">
                                                                <!-- <div class="lib-row lib-header">
                                                                    Example library
                                                                    <div class="lib-header-seperator"></div>
                                                                </div> -->
                                                                <div class="lib-row lib-desc actu_gauche">
                                                                   <h5 class="title_actu"> {{actu.title}}</h5>
                                                                   <h5 class="content_actu"> {{actu.content}}</h5> 
                                                                   <span class="tilte_date">{{actu.createdAt | date('d/m/y') }}</span>      
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                </a>
                            </li>
                        {% endfor %}  
					
						
					</ul>
                </div>

            </div>

        </div>

    </div>

</section>












{% endblock %}
