                                                                   <h5 class="content_actu"> {{actu.content}}</h5> 
                                                                   <span class="tilte_date">{{actu.createdAt | date('d/m/y') }}</span>      
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                </a>
                            </li>
                        {% endfor %}  
					
						
					</ul>
                </div>
                
                </div>
                <br>
        </div>
           
 </div>

</div>
