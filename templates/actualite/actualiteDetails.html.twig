                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100 slider_img_perso" src="{{asset('StyleAgrinet2/images/979d97f171757ebd987045491ca5d150.jpg')}}" alt="First slide">
                                <div class="carousel-caption d-none d-md-block slider_text_perso" >
                                    
                                    <p>AGRINET:APPEL A LA CONTRIBUTION POUR LE DEVELOPPEMENT DE L'AGRICULTURE AU CAMEROUN</p>
                                </div>
                            </div>
                            <div class="carousel-item ">
                                <img class="d-block w-100 slider_img_perso" src="{{asset('StyleAgrinet2/images/for3.jpg')}}" alt="Second slide">
                                <div class="carousel-caption d-none d-md-block slider_text_perso">
                                    <p>AGRINET:APPEL A LA CONTRIBUTION POUR LE DEVELOPPEMENT DE L'AGRICULTURE AU CA%EROUN</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100 slider_img_perso" src="{{asset('StyleAgrinet2/images/pic4.jpg')}}" alt="Third slide">
                                <div class="carousel-caption d-none d-md-block slider_text_perso">
                                    <p>AGRINET:APPEL A LA CONTRIBUTION POUR LE DEVELOPPEMENT DE L'AGRICULTURE AU CA%EROUN</p>
                                </div>
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                                            <a class="carousel-control-next" href="{{asset('StyleAgrinet2/images/agridata record 2.png')}}" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    </div>


                </div>

				<div class="card">

					<div class="card-header bg-dark text-white">
                         DERNIÈRES ACTUALITÉS
					</div>
					<ul class="list-group list-group-flush tailleImgTextActu">

						{% for actu in  listeActu  %}
							<li class="list-group-item">
                                <a href="{{path('details_article', {id: actu.id})}}">
                                    <div class="container">
                                            <div class="row row-margin-bottom">
                                                <div class="col-md-12 no-padding lib-item" data-category="view">
                                                    <div class="lib-panel">
                                                        <div class="row box-shadow">
                                                            <div class="col-md-4 positionActuImg" >
                                                                <img class="lib-img-show imageActu" src="{{ asset('uploads/') }}{{ actu.image }}">
                                                            </div>
                                                            <div class="col-md-8 positionTexteActu">
