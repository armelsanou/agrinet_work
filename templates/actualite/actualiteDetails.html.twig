    <div class="container">
    </div>
</div>
<!-- //banner -->

<style>
   h2.article-title
{
font-family: 'News Cycle', sans-serif;
color: red;
}
article
{
    padding-bottom: 20px;
}
.article-caption
{
position: absolute;
bottom: 16px;
max-width: 90%;
text-align: center;
background-color: rgba(200,200,200,0.5);

}

.article-img
{
width: 100%; 
max-height: 400px;
object-fit: cover;
}


@media screen and (max-width: 768px) { 
.article-title
{
font-size: 28px;
}
}

@media screen and (max-width: 500px) { 
.article-title
{
font-size: 20px;
}
}

.article-caption a
{
color: white;
}

article.lib-row.lib-desc.col-md-9 {
    background: #eeeeee94 !important;
}

section#teamActualite {
    background: rgba(0, 123, 255, 0.04) !important;
    overflow: -webkit-paged-x;
}

</style>


<!-- Team -->
<section id="teamActualite">
  <div class="container">
        <div class="row">
            <article class="lib-row lib-desc col-md-9">
                <figure class="col-lg-12">
                    <a href=""><img class="img img-responsive article-img"
                             src="{{ asset('uploads/') }}{{ actualite.image }}"></a>
                    <figcaption class="article-caption">
                        <h2 class="article-title">{{actualite.title}}</h2>
                    </figcaption>
                </figure>
                <div class="article-intro col-lg-12" style="padding-top: 10px;">
                    <strong>{{actualite.content}}</strong>
                </div>

            </article>
        
             <div class="col-md-3 design_bloc_left">

                <div class="card">

                    <div class="card-header bg-dark text-white focus_design">
                       Focus
                    </div>
                    <div id="carouselExampleIndicators" class="carousel slide focus_design" data-ride="carousel">
