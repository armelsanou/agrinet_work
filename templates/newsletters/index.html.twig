{% extends 'VuesAgrinet2/layout.html.twig' %}

{% block Home_title %}::acueil {% endblock %}

{% block stylesheets %}
<style>
    .col-sm-6.form_newsletter {
    /* padding-top: 3px; */
    padding-bottom: 23px;
}
.titre_news {
    background: #ffc107;
    width: 100%;
    /* color: white!important; */
    margin-top: 16px;
    padding-left: 12px;
}
.titre_news p {
    color: white;
    height: 61px;
    font-size: 25px;
}
h5.sous_titre_news {
    color: black;
    padding: 29px;
}
p.description_news {
    padding: 10px;
}
label.required {
    color: #ff000099;
}

label.required::after {
    content: "*";
    color: red;
}
</style>
{% endblock %}


{% block body %}
<div class="inner-banner" id="home">
    <div class="container">
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="titre_news"><p>INSCRIPTION NEWSLETTER AGRICOLE</p></div>
            <h5 class="sous_titre_news"> NEWSLETTERS AGRINET FARM</h5>
            <p class="description_news"> 
            <span class="fa fa-quote-left text-danger text-color mr-2"></span>  pour recevoir la lettre d'information (newsletter) agrinetfarm.com sur l'actualite des 
                professionnels de l'agriculture, nous vous invitons a remplir le formulaire ci-dessous  <span class="fa fa-quote-right text-danger text-color mr-2"></span>
            </p>

        <div class="col-sm-6 form_newsletter" >

            {{ form_start(formNewsletters)}}
            
            <div class="form-group">
            
                {{form_row(formNewsletters.prenom, { 'label': 'Prenom', 'attr': {'placeholder':'Entrez votre prenom','class':'form-control'}}) }}
            </div>
            <div class="form-group">
            
                {{form_row(formNewsletters.nom, { 'label': 'Nom', 'attr': {'placeholder':'Entrez votre nom','class':'form-control'}})
                }}
            </div>
            <div class="form-group">
            
                {{form_row(formNewsletters.fonction, { 'label': 'Fonction', 'attr': {'placeholder':'Entrez votre fonction','class':'form-control'}})
                }}
            </div>
            <div class="form-group">
            
                {{form_row(formNewsletters.entreprise, {'attr': {'placeholder':'Entrez votre entreprise','class':'form-control'}})
                }}
            </div>
            <div class="form-group">
            
                {{form_row(formNewsletters.email, { 'attr': {'placeholder':'Entrez votre email','class':'form-control'}})
                }}
            </div>

            
           
            
            <button type="submit" class="btn btn-success">Envoyer</button>
            
            {{form_end(formNewsletters)}}

            
                
            </div>
    </div>
</div>



{% endblock %}